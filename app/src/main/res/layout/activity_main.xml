<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/box_blue_text"
        style="@style/blueBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/margin_wide"
        android:layout_marginTop="@dimen/margin_wide"
        android:paddingTop="30dp"
        android:text="@string/box_blue_text"
        app:layout_constraintBottom_toTopOf="@+id/box_green_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/box_green_text"
        style="@style/greenBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/margin_wide"
        android:layout_marginTop="@dimen/margin_wide"
        android:paddingTop="30dp"
        android:text="@string/box_green_text"
        app:layout_constraintBottom_toTopOf="@+id/box_purple_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_blue_text" />


    <TextView
        android:id="@+id/box_purple_text"
        style="@style/purpleBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/margin_wide"
        android:layout_marginTop="@dimen/margin_wide"
        android:layout_marginBottom="@dimen/margin_wide"
        android:paddingTop="30dp"
        android:text="@string/box_purple_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_green_text" />

    <TextView
        android:id="@+id/red_box_text"
        style="@style/redBox"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:paddingTop="80dp"
        android:text="@string/box_red_text"
        app:layout_constraintBottom_toBottomOf="@+id/box_green_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/box_blue_text"
        app:layout_constraintTop_toTopOf="@+id/box_blue_text" />

    <TextView
        android:id="@+id/box_clear"
        style="@style/clearBox"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:text="@string/box_clear"
        app:layout_constraintBottom_toBottomOf="@+id/box_purple_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/box_purple_text"
        app:layout_constraintTop_toTopOf="@+id/box_purple_text" />

</androidx.constraintlayout.widget.ConstraintLayout>